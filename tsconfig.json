{
  "compilerOptions": {
    "module": "commonjs",          
    "target": "es2017",          
    "lib": ["es2017", "dom"],     

    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "paths": {
      "@/*": ["app/*"]
    }
  },
  "exclude": ["node_modules"]
}
